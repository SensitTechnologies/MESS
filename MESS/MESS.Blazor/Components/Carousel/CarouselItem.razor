<div class="carousel-item @(IsActive ? "active" : "")">
    <img src="@ImagePath" class="d-block w-100" alt="@AltText" style="@ImageStyle">
    @if (!string.IsNullOrEmpty(Caption))
    {
        <div class="carousel-caption d-none d-md-block">
            <h5>@Title</h5>
            <p>@Caption</p>
        </div>
    }
</div>

@code {
    /// <summary>
    /// Gets or sets the path to the image displayed in the carousel item.
    /// </summary>
    [Parameter]
    public string ImagePath { get; set; } = "";

    /// <summary>
    /// Gets or sets the alternative text for the image.
    /// </summary>
    [Parameter]
    public string AltText { get; set; } = "";

    /// <summary>
    /// Gets or sets the caption text displayed below the image.
    /// </summary>
    [Parameter]
    public string Caption { get; set; } = "";

    /// <summary>
    /// Gets or sets the title text displayed above the caption.
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "";

    /// <summary>
    /// Gets or sets a value indicating whether the carousel item is active.
    /// </summary>
    [Parameter]
    public bool IsActive { get; set; }

    /// <summary>
    /// Gets or sets the inline style applied to the image.
    /// </summary>
    [Parameter]
    public string ImageStyle { get; set; } = "height: 300px; object-fit: cover;";
}