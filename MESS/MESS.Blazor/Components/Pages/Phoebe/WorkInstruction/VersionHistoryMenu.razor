<div class="sidebar-panel @(IsOpen ? "open" : "closed")">
    <div class="sidebar-header d-flex justify-content-between align-items-center mb-3">
        <h5>Version History</h5>
        <button class="btn-close" @onclick="OnToggleClicked" aria-label="Close sidebar" />
    </div>

    <button class="btn btn-primary mb-3" @onclick="OnRestoreClicked">
        Restore
    </button>
</div>


@code {
    /// <summary>
    /// Gets or sets a value indicating whether the sidebar is open or closed.
    /// </summary>
    [Parameter]
    public bool IsOpen { get; set; } = false;

    /// <summary>
    /// Event callback triggered when the sidebar toggle button or close button is clicked.
    /// </summary>
    [Parameter]
    public EventCallback OnToggle { get; set; }

    // Optional: EventCallback for the Restore button if parent wants to handle it
    /// <summary>
    /// Event callback triggered when the restore button is clicked.
    /// </summary>
    [Parameter]
    public EventCallback OnRestore { get; set; }

    private async Task OnToggleClicked()
    {
        if (OnToggle.HasDelegate)
            await OnToggle.InvokeAsync(null);
    }

    private async Task OnRestoreClicked()
    {
        if (OnRestore.HasDelegate)
            await OnRestore.InvokeAsync(null);
    }
}