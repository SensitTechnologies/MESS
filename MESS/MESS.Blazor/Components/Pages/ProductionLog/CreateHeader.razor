<div class="d-flex justify-content-between gap-4 flex-sm-wrap header-container">
    <div class="card info-card product-card">
        <div class="card-body">
            <h5 class="card-title">Product</h5>
            <h3 class="card-text">@ActiveProduct</h3>
        </div>
    </div>
    <div class="card info-card workstation-card">
        <div class="card-body">
            <h5 class="card-title">Work Station</h5>
            <h3 class="card-text">@WorkStation</h3>
        </div>
    </div>
    <div class="card info-card operator-card">
        <div class="card-body">
            <h5 class="card-title">Operator</h5>
            <h3 class="card-text">@LineOperator</h3>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? ActiveProduct { get; set; }
    [Parameter]
    public string? WorkStation { get; set; }
    [Parameter]
    public string? LineOperator { get; set; }
}