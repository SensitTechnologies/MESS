<div class="d-flex justify-content-between flex-sm-wrap">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Product</h5>
            <h3 class="card-text">@ActiveProduct</h3>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Work Station</h5>
            <h3 class="card-text">@WorkStation</h3>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Operator</h5>
            <h3 class="card-text">@LineOperator</h3>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? ActiveProduct { get; set; }
    [Parameter]
    public string? WorkStation { get; set; }
    [Parameter]
    public string? LineOperator { get; set; }
}